<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the Bottom Label explaining the activity -->
    <style name="activityLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/lightGrey</item>
        <item name="android:padding">12dp</item>
    </style>

    <!--Style for main Activity-->
    <style name="mainActivityStyle">
        <item name="android:padding">@dimen/main_activity_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mainActivityCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/categoryTextSize</item>
        <item name="android:layout_marginBottom">@dimen/categoryMargin</item>

    </style>

    <!--Style for Artist List Activity-->
    <style name="artistListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:padding">@dimen/artistListPadding</item>
        <item name="android:layout_marginLeft">@dimen/artistListMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/artistListMarginRight</item>
    </style>

    <style name="artistListImageView">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="artistListTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
